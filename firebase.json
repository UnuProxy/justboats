{
  "functions": {
    "source": "functions",
    "runtime": "nodejs20",
    "secrets": ["SENDGRID_API_KEY", "RESEND_API_KEY"],
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "functions": {
      "host": "127.0.0.1",
      "port": 5001
    },
    "firestore": {
      "host": "127.0.0.1",
      "port": 8080
    },
    "hosting": {
      "host": "127.0.0.1",
      "port": 5000
    },
    "pubsub": {
      "host": "127.0.0.1",
      "port": 8085
    },
    "eventarc": {
      "host": "127.0.0.1",
      "port": 9300
    },
    "auth": {
      "host": "127.0.0.1",
      "port": 9099
    }
  }
}
